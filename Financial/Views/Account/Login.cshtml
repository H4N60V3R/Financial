@model Financial.Models.ViewModels.Model_Login

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="panel panel-default" style="margin: 15vh auto 10px auto;max-width:500px;background-color:#222d32;">

    <div class="panel-body login">
        <div style="text-align:center">
            <img src="~/Content/Images/logo-uni.png" class="Login-img" style="height:250px;" alt="Alternate Text" />
        </div>

        <div class="Login-content">

            <div id="login">
                <h3 class="text-center" style="">خوش آمدید!</h3>
                <form asp-action="Login">


                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <div class="input-group">
                            <span class=" input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input asp-for="Username" class="form-control text-center" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">
                            <span class=" input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input asp-for="Password" class="form-control text-center" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group material-switch-body">
                        <label class="pull-left">مرا به خاطر بسپار</label>
                        <div class="material-switch pull-right">
                            <input asp-for="RemenberMe" />
                            <label asp-for="RemenberMe" class="label-success"></label>
                        </div>
                    </div>
                    <input type="submit" name="name" value="ورود" class="btn btn-block  btn-success" />
                </form>
            </div>
        </div>

    </div>

</div>
