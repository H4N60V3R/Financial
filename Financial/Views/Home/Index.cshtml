@inject FinancialContext context

@{
    ViewData["Title"] = "داشبورد";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">

    <h5 class="heading" style="margin-top: 5px;">اطلاعات کلی</h5>

    <div class="col-md-4">
        <div class="panel panel-default" style="box-shadow: -1px 2px 5px 0px #888888;">

            <div class="panel-heading" style="background-color: #fff; color: #337ab7; height: 100px;">

                <div class="text-center pull-left">
                    <div style="font-size: 2.5em; margin-top: 10px;">@(new DashboardRepository(context).GetAccountsCount())</div>
                </div>

                <div class=" text-right pull-right">
                    <span class="glyphicon glyphicon-file" style="font-size: 3em; margin-top: 10px;"></span>
                </div>

            </div>

            <div class="panel-footer" style="background-color: #fff; color: #337ab7;">
                <div class="text-center" style="font-size: 1em; font-weight: bold; ">تعداد حساب ها</div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default" style="box-shadow: -1px 2px 5px 0px #888888;">

            <div class="panel-heading" style="background-color: #fff; color: #337ab7; height: 100px;">

                <div class="text-center pull-left">
                    <div style="font-size: 2.5em; margin-top: 10px;">
                        @(new DashboardRepository(context).GetAccountsCredit())
                        <small class="sufix">تومان</small>
                    </div>
                </div>

                <div class=" text-right pull-right">
                    <span class="glyphicon glyphicon-usd" style="font-size: 3em; margin-top: 10px;"></span>
                </div>

            </div>

            <div class="panel-footer" style="background-color: #fff; color: #337ab7;">
                <div class="text-center" style="font-size: 1em; font-weight:bold; ">موجودی کلیه حساب ها</div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default" style="box-shadow: -1px 2px 5px 0px #888888;">

            <div class="panel-heading" style="background-color: #fff; color: #337ab7; height: 100px;">

                <div class=" text-center pull-left">
                    <div style="font-size: 2.5em; margin-top: 10px;">@(new DashboardRepository(context).GetTransactionsCount())</div>
                </div>

                <div class="text-right pull-right">
                    <span class="glyphicon glyphicon-transfer" style="font-size: 3em; margin-top: 10px;"></span>
                </div>

            </div>

            <div class="panel-footer" style="background-color: #fff; color: #337ab7;">
                <div class="text-center" style="font-size: 1em; font-weight:bold; ">تعداد تراکنش های وصول شده</div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>

</div>

<div class="row">

    @{
        var accounts = new DashboardRepository(context).GetAccountsAbstract();

        if (accounts.Count() > 0)
        {
            <h5 class="heading">اطلاعات حساب ها</h5>
        }

        foreach (var account in accounts)
        {
            <div class="col-md-4">
                <div class="panel panel-default" style="box-shadow: -1px 2px 5px 0px #888888;">

                    <div class="panel-heading" style="background-color: #fff; color: #337ab7; height: 100px;">

                        <div class="text-center pull-left">
                            <div style="font-size: 2.5em; margin-top: 10px;">
                                @account.Credit
                                <small class="sufix">تومان</small>
                            </div>
                        </div>

                        <div class=" text-right pull-right">
                            <span class="glyphicon glyphicon-credit-card" style="font-size: 3em; margin-top: 10px;"></span>
                        </div>

                    </div>

                    <div class="panel-footer" style="background-color: #fff; color: #337ab7;">
                        <div class="text-center" style="font-size: 1em; font-weight: bold; ">حساب @account.AccountNumber</div>
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
        }
    }

</div>